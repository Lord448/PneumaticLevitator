#ifndef UI_INC_UI_H_
#define UI_INC_UI_H_

#include "lcd.h"
#include "ugui.h"
#include "Bitmaps.h"
#include <stdio.h>
#include <string.h>

typedef enum MenuStages {
	sInitialAnim,
	sMenu,
	sConfiguration,
	sAbout,
	sPlot,
	sUSBConfig,
	sStepResponse
}MenuStage;

typedef enum Input {
	bOk,
	bUp,
	bDown,
	bLeft,
	bRight,
	bMenu,
	bReset
}Input;

void vTaskUI(MenuStage stage, Input input);


